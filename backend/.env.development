# BeMe Backend — Development Environment
# Copy to .env and replace placeholder values with your actual credentials.

# ── Core ──────────────────────────────────────────────────
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=debug

# ── Database ──────────────────────────────────────────────
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/beme
DB_POOL_MAX=10
# DB_SSL_REJECT_UNAUTHORIZED=false
# DB_FORCE_IPV4=false
SKIP_SCHEMA_INIT=false

# ── Auth ──────────────────────────────────────────────────
JWT_SECRET=dev-secret-change-in-production

# ── Frontend / CORS ───────────────────────────────────────
FRONTEND_ORIGIN=http://localhost:5173
# CORS_ORIGIN=http://localhost:5173
# APP_BASE_URL=http://localhost:5173

# ── OAuth (optional) ─────────────────────────────────────
# GOOGLE_CLIENT_ID=your-google-client-id
# FACEBOOK_APP_ID=your-facebook-app-id
# TWITTER_CLIENT_ID=your-twitter-client-id
# TWITTER_CLIENT_SECRET=your-twitter-client-secret
# TWITTER_REDIRECT_URI=http://localhost:3000/api/auth/twitter/callback

# ── Stripe (use test keys from https://dashboard.stripe.com/test/apikeys) ──
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRICE_ID=price_xxx

# ── Voice (Google Gemini) ────────────────────────────────
GEMINI_API_KEY=your-gemini-api-key
# GEMINI_MODEL=gemini-2.5-flash

# ── Redis (optional — enables rate limiting, cache, async voice, event bus) ──
# REDIS_URL=redis://localhost:6379

# ── Events (optional) ────────────────────────────────────
# EVENT_TRANSPORT=redis
# EVENT_QUEUE_URL=
# AWS_REGION=

# ── Per-context DB (optional — fallback to DATABASE_URL) ──
# MONEY_DATABASE_URL=
# SCHEDULE_DATABASE_URL=
# BODY_DATABASE_URL=
# ENERGY_DATABASE_URL=
# GOALS_DATABASE_URL=

# ── Per-context Service URLs (optional — gateway proxy mode) ──
# MONEY_SERVICE_URL=
# SCHEDULE_SERVICE_URL=
# BODY_SERVICE_URL=
# ENERGY_SERVICE_URL=
# GOALS_SERVICE_URL=

# ── Email (optional) ─────────────────────────────────────
# RESEND_API_KEY=re_xxx

# ── MCP Server (optional) ────────────────────────────────
# BEME_MCP_SECRET=
# BEME_MCP_USER_ID=
