# BeMe Backend - Environment template
# Copy to .env and fill in values. See backend/README.md Configuration for details.

# Required (for data, auth, voice, food)
DATABASE_URL=postgresql://user:pass@localhost:5432/beme

# Required in production
JWT_SECRET=change-me-to-a-secure-secret

# Server
PORT=3000

# CORS (production must use explicit origin)
CORS_ORIGIN=
FRONTEND_ORIGIN=http://localhost:5173

# Voice (Google Gemini)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash

# Optional: Redis (rate limit, food cache, BullMQ voice queue, event bus)
REDIS_URL=

# Event bus (when Redis/SQS used)
EVENT_TRANSPORT=redis
EVENT_QUEUE_URL=
AWS_REGION=

# Per-context database (optional; fallback to DATABASE_URL)
MONEY_DATABASE_URL=
SCHEDULE_DATABASE_URL=
BODY_DATABASE_URL=
ENERGY_DATABASE_URL=
GOALS_DATABASE_URL=

# Extracted service URLs (when set, main app proxies those paths)
MONEY_SERVICE_URL=
SCHEDULE_SERVICE_URL=
BODY_SERVICE_URL=
ENERGY_SERVICE_URL=
GOALS_SERVICE_URL=

# Auth (optional social login)
GOOGLE_CLIENT_ID=
FACEBOOK_APP_ID=
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_REDIRECT_URI=

# MCP server (optional)
BEME_MCP_SECRET=
BEME_MCP_USER_ID=

# App URL (optional, for emails, etc.)
APP_BASE_URL=
FRONTEND_URL=

# Email (optional)
RESEND_API_KEY=

# Logging
LOG_LEVEL=info
